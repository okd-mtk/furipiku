<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'public/shared/sidebar', customer: @customer %>
      <div class="col-md-8 offset-md-1">

      <% unless current_customer == @customer %>
        <h3><%= @customer.name %>„Åï„Çì„ÅÆË©≥Á¥∞</h3>
  
        <table>
          <tr>
