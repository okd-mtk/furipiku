<h1 class="font-title4">Followers</h1>

<% @customers.each do |customer| %>
  <div class="col-6">
    <div class="card shadow-sm" style="width: 150px; margin-bottom: 5px;">
      <div style="border-bottom: 1px solid rgba(0, 0, 0, 0.125); text-align: center;">

        <div style="display: inline-block;">
          <%= image_tag customer.profile_image.variant(resize_to_limit: [100, 100]).processed, class:"mt-3 rounded-circle bg-primary" %>
        </div>

        <div>
        <%= link_to customer.name, public_customer_path(customer.id) %>
        </div>

      </div>
    </div>
  </div>
<% end %>