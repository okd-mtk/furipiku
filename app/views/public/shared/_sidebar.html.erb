<!--自分だけの詳細-->
<div class="col-md-3">
  <table>
    <tr>
      <th></th>
      <td><%= image_tag current_customer.get_profile_image(100,100) %></td>
    </tr>

    <tr>
      <th><!--ユーザ名--></th>
      <td><%= current_customer.name %></td>
    </tr>

    <tr>
      <th>フォロー</th>
      <td><%= link_to current_customer.following.count, following_public_customer_path(customer) %></td>
    </tr>

    <tr>
      <th>フォロワー</th>
      <td><%= link_to current_customer.followers.count, followers_public_customer_path(customer) %></td>
    </tr>

    <% if false %>
    <tr>
      <th></th>
      <td><%= link_to 'あなたの投稿一覧', bookmarks_public_customer_path(current_customer.id) %></td>
    </tr>
    <% end %>
    <tr>
      <th></th>
      <td><%= link_to 'いいねした投稿一覧', likes_public_customer_path(current_customer.id) %></td>
    </tr>

    <tr>
      <th></th>
      <td><%= link_to 'ブックマーク一覧', bookmarks_public_customer_path(current_customer.id) %></td>
    </tr>
  </table>
</div>