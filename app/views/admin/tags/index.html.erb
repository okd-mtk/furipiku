<h1>タグ一覧</h1>
<table class="table text-align: center;">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">タグ名</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each_with_index do |tag,i| %>
    <tr>
      <th scope="row"><%= i+1 %></th>
      <td>
        #<%= tag.name %>
      </td>
      <td>
      <%= link_to '削除', admin_tag_path(tag.id), method: :delete, class: "btn btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

