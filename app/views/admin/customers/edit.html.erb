<h1><%= @customer.name %>さんの情報編集</h1>

<table>
  <%= form_with model: @customer, url: admin_customer_path(@customer),method: :patch do |f| %>

  <tr>
    <th>氏名</th>
    <th><%= f.text_field :name %></th>
  </tr>

  <tr>
    <th>メールアドレス</th>
    <th><%= f.text_field :email %></th>
  </tr>

  <tr>
    <th>会員ステータス</th>
    <th>
      <%= f.radio_button :is_deleted, :true %>退会
      <%= f.radio_button :is_deleted, :false %>有効
    </th>
  </tr>
  <% end %>
</table>

<%= link_to '変更を保存',  admin_customer_path(@customer), class: 'btn btn-success font-weight-bold' %>