<h1>会員情報の編集</h1>
  <%= form_with model:@customer, url: public_customer_path(@customer),method: :patch do |f| %>
  <table>
    <tr>
      <th>プロフィール写真</th>
      <td><%= f.file_field :profile_image, accept: "image/*" %></td>
    </tr>
    
    <tr>
      <th>氏名</th>
      <td><%= f.text_field :name %></td>
    </tr>
    
    <tr>
      <th>メールアドレス</th>
      <td><%= f.text_field :email %></td>
    </tr>
    
    <tr>
      <th></th>
      <td>
        <%= f.submit "変更内容の保存" %>
      </td>
    </tr>
    
    <th><%= link_to "退会する", public_unsubscribe_path(current_customer) %></th>
  </table>
  <% end %>