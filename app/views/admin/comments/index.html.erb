<h1>顧客のコメント</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">コメント</th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each_with_index do |comment,i| %>
    <tr>
      <th scope="row"><%= i+1 %></th>
      <td>
        <%= comment.message %>
        <%= link_to comment.customer.name, admin_customer_path(comment.customer.id) %>
      </td>
      <td><%= link_to '削除', admin_comment_path(comment.id), method: :delete, class: "btn btn-danger" %></td>
    </tr>

  <% end %>
  </tbody>

</table>